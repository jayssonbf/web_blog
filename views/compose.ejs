<%- include('partials/header') -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <label for="title" class="form-label">Title</label>
  <br>
  <input type="text" name="postTitle" class="form-control" id="title" autocomplete="off">
  <label for="postText" class="form-label">Post</label>
  <textarea class="form-control" name="postBody" placeholder="Leave a comment here" id="textArea" required></textarea>
  <br>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include('partials/footer') -%>